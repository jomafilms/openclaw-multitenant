# Database
DATABASE_URL=postgresql://ocmt:password@localhost:5432/ocmt

# Agent Server (for wake-on-request)
AGENT_SERVER_URL=http://agent-server-ip:4000
# REQUIRED: Must match the token configured on the agent server
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
AGENT_SERVER_TOKEN=generate-a-secure-token-here

# Server
PORT=5000
NODE_ENV=production

# Rate limiting
RATE_LIMIT_MESSAGES_PER_HOUR=100
RATE_LIMIT_WINDOW_MS=3600000
